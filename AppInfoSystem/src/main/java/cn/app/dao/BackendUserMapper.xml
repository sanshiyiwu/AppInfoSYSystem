<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.app.dao.BackendUserMapper">
	<select id="getBackendUserList" resultType="BackendUser">
		select * from backend_user
	</select>
	<insert id="addBackendUser" parameterType="BackendUser">
		insert into backend_user
		(userCode,userName,userType,createdBy,creationDate,modifyBy,modifyDate,userPassword)
		values
		(#{userCode},#{userName},#{userType},#{createdBy},#{creationDate},#{modifyBy},#{modifyDate},#{userPassword})
	</insert>
	<select id="getBackendUserById" resultType="BackendUser" parameterType="BackendUser">
		select * from backend_user where id=#{id}
	</select>
	<select id="checkUserCode" resultType="BackendUser" parameterType="string">
		select * from backend_user where userCode=#{userCode}
	</select>
	<update id="updBackendUser" parameterType="BackendUser">
		update backend_user
		set userCode=#{userCode},
		userName=#{userName},
		userType=#{userType},
		createdBy=#{createdBy},
		creationDate=#{creationDate},
		modifyBy=#{modifyBy},
		modifyDate=#{modifyDate},
		userPassword=#{userPassword}
		where id=#{id}
	</update>
	<delete id="delBackendUser" parameterType="BackendUser">
		delete * from backend_user where id=#{id}
	</delete>
</mapper>
